%h1
  = t 'products.products'
  -#= t ':products.products'
.panel.panel-default
  / Default panel contents
  -#.panel-heading Products
  -#.panel-body
  / Table
  %table.table
    %tbody
    %tr
      %th
        = Product.human_attribute_name('id')
      %th
        = Product.human_attribute_name('name')
      -#%th Price:
      %th
        = Product.human_attribute_name('price')
      %th
        = Product.human_attribute_name('description')
      -#%th{colspan: 3} Options:
    - @products.each do |product|
      %tr
        %td= product.id
        %td= product.name
        %td= product.price
        %td= product.description
        %td= link_to t('products.overview'), product, class: "btn btn-info"
        -#%td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning"
        %td= link_to t('products.destroy'), product, method: :delete, data: { confirm: t('products.are_you_sure') }, class: "btn btn-warning"
        -#%td= link_to 'Buy it', add_cart_path(product_id: product.id), remote: true, class: "btn btn-success"
        %td= link_to t('products.buy'), add_cart_path(product_id: product.id), remote: true, class: "btn btn-success"

= link_to t('products.new'), new_product_path,  class: "btn btn-default"
