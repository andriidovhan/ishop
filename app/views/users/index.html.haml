%h1
  = t 'users.users'

= flash[:notice]

-#%h1 Users
.panel.panel-default
  / Default panel contents
  -#.panel-heading Users
  -#.panel-body
  / Table
  %table.table
    %thead
      %tr
        %th
          = User.human_attribute_name('name')
        %th
          = User.human_attribute_name('age')
        %th{:colspan => "3"}
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.age
          %td= link_to t('users.overview'), user
          %td= link_to t('users.edit'), edit_user_path(user)
          %td= link_to t('users.destroy'), user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to t('users.new'), new_user_path, class: "btn btn-default"
